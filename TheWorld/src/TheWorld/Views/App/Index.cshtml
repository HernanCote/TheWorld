@{ 
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <title>The World - @ViewBag.Title</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="sidebar">
        <img class="headshot" src="~/img/spartan.png" alt="headshot" />
        <span id="username">Sam Hastings</span>
        <ul class="menu">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
    </div>
    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebar-toggle">Toggle Menu</button>
            </div>
            <h1>The world</h1>
            <p>This will be a fun website soon!</p>
            <form>
                <div>
                    <label>Date</label>
                    <input type="text" />
                </div>
                <div>
                    <label>Location</label>
                    <input type="text" />
                </div>
                <div><input type="button" value="Add" /></div>
            </form>
        </div>
        <div id="footer">
            &copy; 2016 The World Ltd. - Hernan Cote
        </div>
    </div>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>
</body>
</html>